<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout
    tools:context="com.example.ankitkumar.progress_bar.MainActivity"
    android:background="#ededed"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/activity_main"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

<Button
    android:background="@drawable/my_style"
    android:layout_height="100sp"
    android:layout_width="100sp"
    android:id="@+id/start_bt"
    android:textStyle="bold"
    android:textSize="18sp"
    android:textColor="#ffffff"
    android:text="@string/start"
    android:fontFamily="sans-serif-condensed"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20sp"/>


<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="30sp"
    android:orientation="vertical"
    android:layout_below="@id/start_bt">

    <ProgressBar
        android:background="@drawable/pb_style"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/one_pb"
        android:layout_marginTop="10sp"
        android:progress="0"
        android:max="10"
        android:indeterminate="false"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    <ProgressBar
        android:background="@drawable/pb_style"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/two_pb"
        android:layout_marginTop="20sp"
        android:progress="0"
        android:max="10"
        android:indeterminate="false"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    <ProgressBar
        android:background="@drawable/pb_style"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/three_pb"
        android:layout_marginTop="20sp"
        android:progress="0"
        android:max="10"
        android:indeterminate="false"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="50sp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    <ProgressBar
        android:background="@drawable/pb_style"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/four_pb"
        android:layout_marginTop="20sp"
        android:progress="0"
        android:max="10"
        android:indeterminate="false"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    <ProgressBar
        android:background="@drawable/pb_style"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/five_pb"
        android:layout_marginTop="20sp"
        android:progress="0"
        android:max="10"
        android:indeterminate="false"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

</LinearLayout>

<TextView
    android:background="#617e8c"
    android:layout_height="50sp"
    android:layout_width="match_parent"
    android:id="@+id/tv_complete"
    android:textStyle="bold"
    android:textSize="18sp"
    android:textColor="#ffffff"
    android:text="@string/downloading"
    android:fontFamily="sans-serif-condensed"
    android:layout_centerHorizontal="true"
    android:visibility="invisible"
    android:textAllCaps="false"
    android:gravity="center"
    android:layout_alignParentBottom="true"/>

</RelativeLayout>